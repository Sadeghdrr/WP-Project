# =============================================================================
# WP-Project/.env.example
#
# Safe template – contains NO real secrets.
# Copy to WP-Project/.env and fill in your values.
# The file WP-Project/.env is git-ignored; this file is tracked.
# =============================================================================

# -----------------------------------------------------------------------------
# Django
# -----------------------------------------------------------------------------

# REQUIRED — Generate a strong key with:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-to-a-long-random-secret-key

# true | false  (use false in production)
DEBUG=false

# Comma-separated list of allowed host/domain names
ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated list of trusted origins for CSRF (include scheme)
CSRF_TRUSTED_ORIGINS=http://localhost:5173

# Comma-separated list of origins allowed for CORS (include scheme)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
DB_NAME=wpproject
DB_USER=wpuser
DB_PASSWORD=changeme
# Local dev (no Docker): DB_HOST=localhost
# Docker Compose:        DB_HOST=db   (must match the compose service name)
DB_HOST=db
DB_PORT=5432

# -----------------------------------------------------------------------------
# Internationalisation / Timezone
# -----------------------------------------------------------------------------
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# -----------------------------------------------------------------------------
# Static & Media files
# -----------------------------------------------------------------------------
STATIC_URL=/static/
# Absolute filesystem path where collectstatic writes files (relative to BASE_DIR)
STATIC_ROOT=staticfiles

MEDIA_URL=/media/
# Relative to BASE_DIR
MEDIA_ROOT=media

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Frontend – Vite reads variables prefixed with VITE_
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000/api
